@using PersonelPuantajUygulamasi.Models

@{
    ViewData["Title"] = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <h4 class="page-title">
            @*Başlık*@ Vardiya Sistemleri
        </h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                @*Detay*@ Çalışma Vardiya Sistem Yönetim Sayfası.
            </li>
        </ol>
    </div>
    <div class="col-sm-3">
        <div class="btn-group float-sm-right">


            <button class="btn btn-success" data-toggle="modal" data-target="#successymodal">
                <i class="fa fa-plus"></i>
                Yeni Vardiya
            </button>
            <div class="modal fade" id="successymodal">
                <div class="modal-dialog modal-lg">
                    <form action="/Vardiya/Kaydet/" method="post">
                        <div class="modal-content border-success">
                            <div class="modal-header bg-success">
                                <h5 class="modal-title text-white"> Vardiya Ekle </h5>
                                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">



                                <div class="form-group col-lg-12">
                                    <label>Vardiya Adı</label>
                                    <input type="text" class="form-control" name="Ad">
                                </div>



                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="fa fa-times"></i> Kapat </button>
                                <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i> Kaydet </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-clock-o"></i> Vardiya Sistemleri </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Vardiya Adı</th>
                                <th scope="col">Vardiya Düzenle</th>
                                <th scope="col">Vardiya Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Vardiya item in ViewBag.Vardiya)
                            {
                                string Duz = "Duz" + item.Id;
                                string Sil = "Sil" + item.Id;
                                <tr>
                                    <td scope="row">@item.Id</td>
                                    <td scope="row">@item.Ad</td>
                                    <td scope="row">


                                        <button class="btn btn-sm btn-warning" data-toggle="modal" data-target="#@Duz">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <div class="modal fade" id="@Duz">
                                            <div class="modal-dialog modal-lg">
                                                <form action="/Vardiya/Duzenle/" method="post">
                                                    <input type="text" name="Id" value="@item.Id" hidden />
                                                    <div class="modal-content border-secondary">
                                                        <div class="modal-header bg-secondary">
                                                            <h5 class="modal-title text-white">@item.Ad Vardiya Bilgisi</h5>
                                                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="form-group col-lg-12">
                                                                <label>Vardiya Adı</label>
                                                                <input type="text" class="form-control" name="Ad" value="@item.Ad">
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button>
                                                            <button type="submit" class="btn btn-secondary"><i class="fa fa-check-square-o"></i> Kaydet </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                    </td>
                                    <td scope="row">


                                        <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#@Sil"><i class="fa fa-trash"></i></button>
                                        <div class="modal fade" id="@Sil">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content border-danger">
                                                    <div class="modal-header bg-danger">
                                                        <h5 class="modal-title text-white">@item.Ad Vardiyası Silinecek</h5>
                                                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group col-lg-12">
                                                            <label>Vardiya Adı</label>
                                                            <input type="text" class="form-control" name="Ad" value="@item.Ad" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="fa fa-times"></i> Kapat</button>
                                                        <a class="btn btn-danger" href="/Vardiya/Sil/@item.Id">Evet Sil</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


